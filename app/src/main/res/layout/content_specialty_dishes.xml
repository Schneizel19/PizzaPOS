<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.SpecialtyDishes"
    tools:showIn="@layout/activity_specialty_dishes"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Specialty Dishes"
        android:id="@+id/specialtyDishesTitle"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/subsGridLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/appsAndSidesTitle"
        android:alignmentMode="alignBounds">

        <Button
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Garlic Bread"
            android:id="@+id/garlicBreadBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:textSize="25dp"
            android:layout_gravity="top|center|fill"
            android:backgroundTint="#eaeaea"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Side Sausage"
            android:id="@+id/sideSausageBtn"
            android:layout_gravity="center|fill"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Side Meatballs"
            android:id="@+id/sideMeatballsBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif"
            android:textAlignment="center" />
        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="French Fries"
            android:id="@+id/friesBtn"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:layout_gravity="center|fill"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="Mussels Possilipo"
            android:id="@+id/musselsPossilipoBtn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="Pizza Pin Weels"
            android:id="@+id/pizzaPinWheelsBtn"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="Garlic Knots"
            android:id="@+id/garlicKnotsBtn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="Fried Calamari"
            android:id="@+id/friedCalamariBtn"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />

        <Button
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="BACK"
            android:id="@+id/backBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif"
            android:width="200dp" />


    </GridLayout>
</RelativeLayout>