<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.MainMenu"
    tools:showIn="@layout/activity_main_menu"
    android:background="#b25b5b">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:id="@+id/gridLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alignmentMode="alignBounds">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Soups and Salads"
            android:id="@+id/SoupsSaladsBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:textSize="25dp"
            android:layout_gravity="top|center|fill"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subs and Sandwhiches"
            android:id="@+id/SubsSandBtn"
            android:layout_gravity="center|fill"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classics"
            android:id="@+id/classicsBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="For The Kids"
            android:id="@+id/forTheKidsBtn"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:layout_gravity="center|fill"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty Pizzas"
            android:id="@+id/specialtyPizzasBtn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Pizzas"
            android:id="@+id/customPizzasBtn"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Calzones"
            android:id="@+id/calzonesBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Pops"
            android:id="@+id/pizzaPopsBtn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps + Sides"
            android:id="@+id/appsSidesBtn"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Drinks"
            android:id="@+id/drinksBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty Dishes"
            android:id="@+id/specialtyDishesBtn"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/buttons9"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="BACK"
            android:id="@+id/backBtn"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:textSize="25dp"
            android:backgroundTint="#fdf8c5"
            android:typeface="serif"
            android:backgroundTintMode="screen" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Order"
            android:id="@+id/buttons10"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:textSize="25dp"
            android:backgroundTint="#fdf8c5"
            android:typeface="serif" />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/luca"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
