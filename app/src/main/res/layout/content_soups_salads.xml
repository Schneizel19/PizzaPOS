<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.SoupsSalads"
    tools:showIn="@layout/activity_soups_salads"
    android:background="#b25b5b">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Roasted Veggie Wrap"
            android:id="@+id/veggieWrapBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:textSize="25dp"
            android:layout_gravity="top|center|fill"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antipasto"
            android:id="@+id/SubsSandBtn"
            android:layout_gravity="center|fill"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caesar Salad"
            android:id="@+id/classicsBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Garden Salad"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:backgroundTint="#eaeaea"
            android:layout_gravity="center|fill"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greek Salad"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insalata Caprese"
            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="The Wedge"
            android:id="@+id/buttons2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuna/Chicken Salad"
            android:id="@+id/buttons3"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soups + Salads"
            android:id="@+id/buttons6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="25dp"
            android:typeface="serif" />

    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soups and Salads"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />
</RelativeLayout>
