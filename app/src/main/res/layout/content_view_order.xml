<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.ViewOrder"
    tools:showIn="@layout/activity_view_order"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Order Details"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Order"
        android:id="@+id/completeBtn"
        android:textSize="40dp"
        android:typeface="serif"
        android:layout_marginBottom="79dp"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/orderTotalDisp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_above="@+id/textView8"
        android:layout_alignEnd="@+id/listView2"
        android:layout_marginEnd="71dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/orderNumDisp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/orderTotalDisp"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:typeface="serif" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/completeBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put on hold"
        android:id="@+id/onHoldbtn"
        android:textSize="40dp"
        android:padding="20dp"
        android:typeface="serif"
        android:layout_below="@+id/listView2"
        android:layout_toStartOf="@+id/imageView6" />

</RelativeLayout>
