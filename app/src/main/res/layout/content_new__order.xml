<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.New_Order"
    tools:showIn="@layout/activity_new__order"
    android:background="#b25b5b">

    <Button
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:text="Create New Order"
        android:id="@+id/NewOrderButton"
        android:textSize="60dp"
        android:clickable="true"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp" />

    <Button
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:text="Edit Order"
        android:id="@+id/EditOrderButton"
        android:textSize="60dp"
        android:clickable="true"
        android:layout_alignTop="@+id/NewOrderButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp"
        android:typeface="serif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca"/>

</RelativeLayout>
