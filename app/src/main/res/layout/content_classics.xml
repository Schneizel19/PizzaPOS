<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.SoupsSalads"
    tools:showIn="@layout/activity_classics"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Classics"
        android:id="@+id/classicsTitle"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/subsGridLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/classicsTitle"
        android:alignmentMode="alignBounds">

        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Spaghetti + Meatballs"
            android:id="@+id/spaghettiBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:textSize="20dp"
            android:layout_gravity="top|center|fill"
            android:backgroundTint="#eaeaea"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Tortellini Giacomo"
            android:id="@+id/tortelliniBtn"
            android:layout_gravity="center|fill"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20dp"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:text="Pasta Barese"
            android:id="@+id/pastaBareseBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:textAlignment="center" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Shrimp Scampi"
            android:id="@+id/shrimpScampiBtn"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="20dp"
            android:backgroundTint="#eaeaea"
            android:layout_gravity="center|fill"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Mussels Marinara"
            android:id="@+id/musselsMarinaraBtn"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Mussels Possilipo"
            android:id="@+id/musselsBtn"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Penne Alla Vodka"
            android:id="@+id/penneVodkaBtn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Lasagna"
            android:id="@+id/lasagnaBtn"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Baked Ziti W/Eggplant"
            android:id="@+id/bakedZitiBtn"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Baked Ravioli"
            android:id="@+id/bakedRavioliBtn"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Chicken Parmigiana"
            android:id="@+id/chickenParmBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Veal Parmigiana"
            android:id="@+id/vealParmBtn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Eggplant Parmigiana"
            android:id="@+id/eggplantParmBtn"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:textAlignment="center"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Spaghetti Putanesca"
            android:id="@+id/spaghettiPuttanescaBtn"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="Chicken Marsala"
            android:id="@+id/chickenMarsalaBtn"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="BACK"
            android:id="@+id/backBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:textSize="20dp"
            android:backgroundTint="#fdf8c5"
            android:typeface="serif" />

    </GridLayout>
</RelativeLayout>