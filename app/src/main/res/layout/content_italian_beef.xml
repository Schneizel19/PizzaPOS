<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.italianBeef"
    tools:showIn="@layout/activity_italian_beef"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Italian Beef"
        android:id="@+id/italianBeefText"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:layout_below="@+id/italianBeefText"
        android:layout_centerHorizontal="true"
        android:text="Hot Roast Beef and Provolone on a sub with a hot pepper Giardiniera + Italian seasoned beef broth for dipping"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$10.95"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/italianBeefComments"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:editable="true"
        android:hint="Comments"
        android:typeface="serif"
        android:inputType="text"
        android:singleLine="false"
        android:textColorHint="#ffffff" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="  Add to Order  "
        android:id="@+id/addtToOrder"
        android:layout_below="@+id/italianBeefComments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:clickable="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_below="@+id/addtToOrder"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:textSize="25dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/orderNumDisp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/orderNumberDisp"
        android:layout_alignTop="@+id/orderNumDisp"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textSize="30sp" />

</RelativeLayout>



