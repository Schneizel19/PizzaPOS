<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.RoastedVeggieWrap"
    tools:showIn="@layout/activity_roasted_veggie_wrap"
    android:background="#b25b5b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Roasted Veggie Wrap"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:typeface="serif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Portabella mushrooms, fresh mozzarella, Roasted red peppers artichokes and humus on a wrap"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="serif"
        android:textStyle="italic"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$8.95"
        android:id="@+id/textView7"
        android:typeface="serif"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/VeggieWrapComments"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:editable="true"
        android:hint="Comments"
        android:typeface="serif"
        android:inputType="text"
        android:singleLine="false"
        android:textColorHint="#ffffff" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="  Add to Order  "
        android:id="@+id/addtToOrder"
        android:layout_below="@+id/VeggieWrapComments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:clickable="true" />
</RelativeLayout>
