<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.CaesarSalad"
    tools:showIn="@layout/activity_caesar_salad"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caesar Salad"
        android:id="@+id/caesarSaladText"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textSize="60dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Romaine, croutons, pecorino cheese &amp; Caesar dressing"
        android:id="@+id/textView7"
        android:layout_below="@+id/caesarSaladText"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:textColor="#ffffff" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Meat"
            android:id="@+id/radioButton"
            android:enabled="true"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Chicken  +$3.00"
            android:id="@+id/radioButton2"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Shrimp  +$6.00"
            android:id="@+id/radioButton3"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
