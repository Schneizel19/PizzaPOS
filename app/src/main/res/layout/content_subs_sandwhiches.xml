<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="teamdynamite.pizzapoint.SubsSandwhiches"
    tools:showIn="@layout/activity_subs_sandwhiches"
    android:background="#b25b5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subs and Sandwhiches"
        android:id="@+id/SubsSandwhichesTitle"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="serif" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/subsGridLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/SubsSandwhichesTitle"
        android:alignmentMode="alignBounds">

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Hot Italian"
            android:id="@+id/hotItalianBtn"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:textSize="20dp"
            android:layout_gravity="top|center|fill"
            android:backgroundTint="#eaeaea"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Hot Pastrami"
            android:id="@+id/hotPastramiBtn"
            android:layout_gravity="center|fill"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20dp"
            android:backgroundTint="#eaeaea"
            android:typeface="serif" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="French Dip"
            android:id="@+id/frenchDipBtn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:textAlignment="center" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="American Hero"
            android:id="@+id/americanHeroBtn"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="20dp"
            android:backgroundTint="#eaeaea"
            android:layout_gravity="center|fill"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="The Cuban"
            android:id="@+id/cubanBtn"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Chicken Cordon Bleu"
            android:id="@+id/cordonBleuBtn"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Chicken/Tuna Salad"
            android:id="@+id/chickenTunaBtn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Italian Beef"
            android:id="@+id/italianBeefBtn"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="The Sandwhich"
            android:id="@+id/sandwhichBtn"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Pepper + Egg Sub"
            android:id="@+id/pepperEggSubBtn"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Luca Portabella"
            android:id="@+id/lucaPortabellaBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Sausage and Peppers"
            android:id="@+id/sausagePeppersBtn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Meatball Parm Sub"
            android:id="@+id/meatballParmBtn"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:textAlignment="center"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Sausage Parmigiana"
            android:id="@+id/sausageParmBtn"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Eggplant Parm Sub"
            android:id="@+id/eggplantBtn"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Chicken Parmigiana"
            android:id="@+id/chickenParmBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="50dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Garlic Chicken + Cheese"
            android:id="@+id/garlicChickenBtn"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif"
            android:width="200dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Veal Parmigiana"
            android:id="@+id/vealParmBtn"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Chicken Focaccia"
            android:id="@+id/chickenFocacciaBtn"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Luca's Cheesesteak"
            android:id="@+id/lucasCheesesteakBtn"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center|fill"
            android:backgroundTint="#eaeaea"
            android:textSize="20dp"
            android:typeface="serif" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="BACK"
            android:id="@+id/backBtn"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center|fill"
            android:textSize="20dp"
            android:backgroundTint="#fdf8c5"
            android:typeface="serif" />

    </GridLayout>
</RelativeLayout>
